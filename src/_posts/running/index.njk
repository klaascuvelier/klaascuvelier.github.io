---
layout: layouts/default
permalink: /running/
---


<div class="h-screen px-4">
    <h1>Klaas Runs</h1>

    <section class="mt-20">
        <ul class="post-list">
            <li>
                <h2 class="my-0 text-lg">
                <a href="./every-single-street">Running every single street of Ghent</a>
                </h2>
            </li>
            {% for post in collections.running | reverse %}
                <li class="my-1">
                    <h2 class="my-0 text-lg">
                        <a href="{{ post.url | url }}">{{ post.data.title }}</a>
                    </h2>

                    <span class="text-sm text-slate-500">{{ post.date | readableDate }}</span>
                </li>
            {% endfor %}
        </ul>
    </section>

</div>

